.color-swatch {
    width: 19px;
      margin: 0 5px;
    height: 19px;
      position: relative;
}
    .visually-hidden {
	display:none;
    overflow: hidden;
    position: absolute;
    height: 1px;
    width: 1px;
}
    
  .color-option .js-radio-button{
     display:none; 
    }
   
.color-option input[type=radio]:checked+.swatch {
    padding: 0px;
    box-shadow: 0px 0px 0px 1px #000;
}
.color-option .swatch {
    display: inline-block;
    vertical-align: middle;
    height: 19px;
    width: 19px;
    border-radius: 100px;
    border: 2px solid #fff;
    box-shadow: 1px 1px 10px #c5c1c1;
