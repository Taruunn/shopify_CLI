:root{
  --TitleFont : {{ settings.title__font.family }},{{ settings.title__font.fallback_families }};
  --BodyFont : {{ settings.body__font.family }},{{ settings.body__font.fallback_families }} ;
    --mainColor:#333;
}
    
 body{
   font-family:var(--BodyFont);
    font-weight: 400;
    font-style: normal;
    font-size: 18px;
    text-transform: none;
    color: #333;
    line-height: 1.6em;
    overflow: auto;
 }

    
     @media(max-width:767px){
      .small--one{
         width:calc(100% - 20px);
      margin:0 auto;
      }
    }
    
 
    @media(min-width:768px){
      .medium--three{
         width:calc(33% - 20px);
      margin:0 auto;
      }
      .medium--two{
        width:calc(50% - 20px);
      margin:0 auto;
        
      }
    }
    
   @media(min-width:1200px) {
    .full--four{ 
     width:calc(25% - 20px);
      margin:0 auto;
    }
    .full--three{
       width:calc(33% - 20px);
      margin:0 auto;
    }
    .full--five{
       width:calc(20% - 20px);
      margin:0 auto;
    }
   }
    .one-whole{
      
        width:calc(100% - 20px);
    }
    
    .flex_prducts {
    display: flex;
    flex-wrap: wrap;
}
    
    .main_section{
     max-width: 1500px;
    width: 95%;
    margin-left: auto;
    margin-right: auto;
} 
    .container{
          position: relative;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
      
    }
   .Product-variants{
    align-items: center;
    justify-content: center;
    margin-top: 3px;
    display: flex;
    flex-wrap: wrap;
}
    
    .color-swatch {
    border-radius: 100%;
}

.color-swatch {
    width: 19px;
      margin: 0 12px;
    height: 19px;
}
    .visually-hidden {

    overflow: hidden;
    position: absolute;
    height: 1px;
    width: 1px;
}
.Product-variants .color-swatch:before {
    border-width: 3px;
}
.Product-variants .color-swatch:before {
    border-radius: 100%;
    border-width: 4px;
    top: -1px;
    left: -1px;
    right: -1px;
    bottom: -1px;
}
.Product-variants .color-swatch:before {
    border: 2px solid;
    border-color: var( --mainColor);
 
}