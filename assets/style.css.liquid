    .color-swatch {
    border-radius: 100%;
}

.color-swatch {
    width: 19px;
      margin: 0 12px;
    height: 19px;
      position: relative;
}
    .visually-hidden {

    overflow: hidden;
    position: absolute;
    height: 1px;
    width: 1px;
}
     .Product-variants .color-swatch:before {
    content: "";
    position: absolute;
  top: -3px;
    left: -3px;
    right: -3px;
    bottom: -3px;
    z-index: 2;
}
.Product-variants .color-swatch:before {
    border-width: 3px;
}

.Product-variants .color-swatch:before {
    border: 1px solid;
  border-radius: 100%;
    border-color: var( --mainColor);
 
}
