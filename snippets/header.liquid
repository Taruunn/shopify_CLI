 <div class="header__cart main_section container">

   <div class="main-menu">
     <ul class="menu">
  {% for link in linklists.main-menu.links %}
    <li class="menu-link">
      <a href="{{ link.url }}">{{ link.title }}</a>

      {% if link.links.size > 0 %}
        <ul class="menu dropdown-child">
          {% for child_link in link.links %}
            <li class="menu-link">
              <a href="{{ child_link.url }}">{{ child_link.title }}</a>

              {% if child_link.links.size > 0 %}
                <ul class="menu dropdown-grandchild">
                  {% for grandchild_link in child_link.links %}
                    <li class="menu-link">
                      <a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
     
   </div>
   
                <a class="js-ajax-cart-drawer-trigger" href="/cart">
                  <span class="cart-name"><img src="https://cdn.shopify.com/s/files/1/0549/9984/2905/files/shopping-cart.png?v=1635314270"></span>
                    <span class="js-ajax-cart-counter">{{ cart.item_count }}</span>
                </a>

            </div>